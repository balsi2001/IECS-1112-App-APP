<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/order_page_iv"
        android:layout_width="312dp"
        android:layout_height="231dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="48dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/order_page_down_iv"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="16dp"
        android:scrollbarSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/decrease" />

    <ImageView
        android:id="@+id/oeder_page_up_iv"
        android:layout_width="42dp"
        android:layout_height="120dp"
        android:layout_marginTop="304dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/incress"
        tools:layout_editor_absoluteX="27dp" />

    <EditText
        android:id="@+id/order_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/order_page_down_iv"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>