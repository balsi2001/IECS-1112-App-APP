<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".mealmanager">

    <EditText
        android:id="@+id/et_meal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="餐點名稱"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#756F75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_meal_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="餐點說明"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#7A7777"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_meal_name" />

    <EditText
        android:id="@+id/et_meal_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="餐點價格"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#7A7777"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_meal_description" />

    <EditText
        android:id="@+id/et_meal_photo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="餐點圖片名稱"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#7A7777"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_meal_price" />

    <ListView
        android:id="@+id/lv_all_meals"
        android:layout_width="0dp"
        android:layout_height="352dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_meal" />

    <Button
        android:id="@+id/btn_del_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:backgroundTint="#FF9800"
        android:text="刪除餐點"
        app:layout_constraintStart_toEndOf="@+id/btn_add_meal"
        app:layout_constraintTop_toTopOf="@+id/btn_add_meal" />

    <Button
        android:id="@+id/btn_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FF9800"
        android:text="新增餐點"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_meal_photo_name" />

    <Button
        android:id="@+id/btn_backtomain"
        android:layout_width="84dp"
        android:layout_height="34dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:background="#FF9800"
        android:text="點餐頁面"
        app:layout_constraintStart_toEndOf="@+id/btn_del_meal"
        app:layout_constraintTop_toTopOf="@+id/btn_del_meal" />
</androidx.constraintlayout.widget.ConstraintLayout>